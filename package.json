{
  "name": "risk-admin",
  "version": "5.3.0",
  "description": "CYLTFR Admin Web App",
  "main": "index.js",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "build:css": "bin/build-css",
    "build": " bin/build ",
    "test": "npm run test:lint && npm run test:audit && npm run test:jest",
    "test:jest": "jest --no-cache  --detectOpenHandles --runInBand --forceExit",
    "test:audit": "npm audit",
    "test:lint": "standard",
    "postinstall": "npm run build",
    "build:container": "docker build . -t ltfmgmt:v1",
    "package:container": "docker save --output ltfmgmt.tar ltfmgmt:v1",
    "start:container": "docker run -v ~/.aws/:/root/.aws:ro -p 3001:3000 --rm --env-file .env --name ltfmgmt ltfmgmt:v1",
    "debug:container": "docker run -v ~/.aws/:/root/.aws:ro -p 3000:3000 -p 9229:9229 --rm --env-file .env --name ltfmgmt ltfmgmt:v1 node --inspect-brk=0.0.0.0:9229 index.js"
  },
  "author": "defra.gov.uk",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.892.0",
    "@hapi/bell": "^13.1.0",
    "@hapi/boom": "^10.0.1",
    "@hapi/cookie": "^12.0.1",
    "@hapi/hapi": "^21.4.3",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@turf/bbox": "^7.2.0",
    "@turf/helpers": "^7.2.0",
    "@turf/intersect": "^7.2.0",
    "@turf/turf": "^7.2.0",
    "blipp": "4.0.2",
    "dotenv": "^17.2.2",
    "govuk-frontend": "^5.11.2",
    "hapi-pino": "^13.0.0",
    "joi": "^18.0.1",
    "jsonexport": "3.2.0",
    "moment-timezone": "^0.6.0",
    "nunjucks": "^3.2.4",
    "ogr2ogr": "^6.0.1"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "sass": "^1.92.1",
    "standard": "^17.1.2"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "server/public/build/js",
      "server/public/static/vendor"
    ]
  }
}
